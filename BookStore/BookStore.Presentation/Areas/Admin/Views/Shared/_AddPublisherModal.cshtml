<div class="modal" tabindex="-1" role="dialog" id="ModalAddPublisher">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Publisher</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="PublisherName">Name: </label>
                    <input type="text" name="PublisherName" id="PublisherName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="PublisherDescription">Description: </label>
                    <textarea name="PublisherDescription" id="PublisherDescription" class="form-control"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="AddPublisher" onclick="return addPublisher();">Add</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>